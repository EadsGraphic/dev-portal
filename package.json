    "livereload": "^0.7.0",
    "mongoose": "^5.2.5",
    "mongoose-unique-validator": "^2.0.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "react-redux": "^7.1.1",
    "typescript": "^2.9.2",
